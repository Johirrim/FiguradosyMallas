  <div id="login_div" class="main-div">
    <h3>Figurados y Mallas privileged sesion</h3>
    <input type="email" placeholder="Email..." id="email_field" />
    <input type="password" placeholder="Password..." id="password_field" />

    <button onclick="login()">Login to Account</button>
  </div>

<div id="user_div" class="loggedin-div">



            
        <form action="/signup/onoff" method="POST">
                <div class="custom-control custom-checkbox"></div>
                <input type="checkbox" name="controliot" data-toggle="toggle" class="custom-control-input" id="defaultUnchecked">
                <label class="custom-control-label" for="defaultUnchecked">IOT</label>
                <input type="submit" class="btn btn-primary btn-sm"  name="formSubmit" value="Confirmar" />
                </div>               
        </form>


        
            <div class="col-xl-4 col-lg-7">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Acumulado</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div class="chart-pie pt-4">
                    <canvas id="myChart"></canvas>
                  </div>
                  <hr>
                  Seguimiento en tiempo real del acumulado de grafiles 12 metros para malla electrosoldada.
                </div>
              </div>
            </div>



                <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">        
                        <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Corte</th>
                                <th>Valor sensor</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each Data}}
                            <tr>                              
                                <td>{{Cortes}}</td>
                                <td>{{ValorSensor}}</td>                          
                            </tr>
                            {{/each}}              
                        </tbody>        
                       </table>                  
                    </div>
                </div>



                       
     </div>                       

    <script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Grafiles cortados'],
            datasets: [{
                label: 'Grafiles 12 metros',
                data: [{{acumulado}}],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)'
                ],
                borderWidth: 0.1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
    </script>      
